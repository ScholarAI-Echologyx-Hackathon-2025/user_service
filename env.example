# =============================================================================
# User Service - Environment Configuration
# =============================================================================
# Environment variables for the User Service microservice
# Copy this file to .env and fill in the actual values
# =============================================================================


# =============================================================================
# SPRING CONFIGURATION
# =============================================================================
# Application profile (local, docker, prod)
SPRING_PROFILE=local

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# PostgreSQL database for user service

USER_DB_HOST=localhost
USER_DB_PORT=5433
USER_DB_NAME=userDB
USER_DB_USER=your_user_db_username
USER_DB_PASSWORD=your_secure_user_db_password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Default admin user credentials
USER_NAME=admin
USER_PASSWORD=your_secure_admin_password

# JWT Configuration
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_minimum_256_bits
JWT_ACCESS_EXPIRATION_MS=86400000
JWT_REFRESH_EXPIRATION_MS=604800000

# =============================================================================
# RABBITMQ CONFIGURATION
# =============================================================================
# Message broker for inter-service communication

RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=your_rabbitmq_username
RABBITMQ_PASSWORD=your_secure_rabbitmq_password

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
# In-memory data store for caching and sessions

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_secure_redis_password

# =============================================================================
# OAUTH CONFIGURATION
# =============================================================================
# Google OAuth2 for social authentication

SPRING_GOOGLE_CLIENT_ID=your_google_oauth_client_id.apps.googleusercontent.com
SPRING_GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret

# GitHub OAuth2 for social authentication  
SPRING_GITHUB_CLIENT_ID=your_github_oauth_client_id
SPRING_GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# =============================================================================
# IMAGE STORAGE CONFIGURATION
# =============================================================================

# Cloudinary for image management and avatars
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name